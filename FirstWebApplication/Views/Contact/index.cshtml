@model IEnumerable<FirstWebApplication.Data.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="ContactsId" class="table">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <form method="post" action="/contact/edit">
                    <input hidden="hidden" name="id" value="@item.Id" />
                    <input type="submit" value="Edit" />
                </form>

                <form method="post" action="/contact/delete">
                    <input hidden="hidden" name="id" value="@item.Id"/>
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
    }
</table>
